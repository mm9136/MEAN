<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="stylesheets/all.css">
    <link rel="icon" href="../images/logo.jpg" type="jpg">
    <title>{{title}}</title>

</head>

<body>
<div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
        <tr class="top">
            <td colspan="2">
                <table>
                    <tr>
                        <td class="title">
                            <img src="../images/logo.jpg">
                        </td>

                        <td>
                            Order: #{{order_number}}<br> Created: {{date}}<br>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>


        
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Movie</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
            </tr>
            </thead>
            <tbody>
            {{#each dvd}}
            <tr>
                <td>
                    <p class="margin-top-1">
                        {{dvd_name}}
                    </p>
                </td>
                <td class="text-center">
                    <div class="btn-group btn-group-toggle inline-block margin-top-0" data-toggle="buttons">
                        <span class="margin-top-10">{{quantity}}</span>
                    </div>
                </td>
                <td>
                    <p class="margin-top-10">{{price}}$
                    </p>
                </td>
            </tr>
            {{/each}}
            </tbody>
            <tfoot>
            <tr>
                <th id="total" class="right-float" colspan="2">Total :</th>
                <td>{{total}}$</td>
                <td></td>
            </tr>
            </tfoot>
        </table>

</div>
</body>

</html>