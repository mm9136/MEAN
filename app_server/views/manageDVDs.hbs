<div class="container my-5" id="modify_dvd">
    <form class="form_inline mt-3" action="" method="POST" id="dvd_form">
        <div class="form-group">
          <select class="form-control mb-2" name="dvd" id="existing_dvd" onchange="autocompleteDVD()">
            <option value="new">New DVD</option>
            {{#each dvd}}
        	<option value="{{_id}}">{{name}}, koliƒçina: {{quantity}}</option>
            {{/each}}
           </select>
          </select>
          <input id="dvd_title" name="name" class="form-control" type="text" placeholder="DVD title" aria-label="DVD-title">
          <textarea id="dvd_description" name="description" class="form-control" rows="4" placeholder="Description"></textarea>
          <input id="dvd_quantity" name="quantity" class="form-control" type="number" step="0.1" size="2" maxlength=2 placeholder="Quantity" aria-label="IMDB-quantity">
          <input id="dvd_price" name="price" class="form-control mb-1" type="number" step="0.01" placeholder="Price" aria-label="Dvd-price">
        </div>
        <div class="form-group" id="movieList">
            
        </div>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary mb-5" data-toggle="modal" data-target="#manageMovies">
               Add movie to DVD
          </button>
          
          <div class="d-flex justify-content-around flex-wrap"><button class="btn btn-success my-1" id="add_dvd" type="submit" name="method" value="POST">Add</button><button class="btn btn-danger my-1" id="remove_dvd" type="submit" name="method" value="DELETE" disabled>Remove</button><button class="btn btn-warning my-1" id="modify_dvd_btn" type="submit" name="method" value="PUT" disabled>Modify</button></div>
    </form>
    <!-- Modal -->
          <div class="modal fade" id="manageMovies" tabindex="-1" aria-labelledby="manageMoviesLabel" aria-hidden="true">
               <div class="modal-dialog">
                   <div class="modal-content">
                       <div class="modal-header">
                           <h5 class="modal-title" id="manageMoviesLabel">Add movie to DVD</h5>
                           <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                               <span aria-hidden="true">&times;</span>
                           </button>
                       </div>
                       <form class="form" id="add_movie_form">
                           <div class="modal-body">
                              <div class="form-group">
                                   <input type=hidden id="id" value="">
                                   <label for="imdbInput">IMDB ID</label>
                                   <input type="text" class="form-control" id="imdbInput">
                               </div>
                               <div class="form-group">
                                   <label for="titleInput">Title</label>
                                   <input type="text" class="form-control" id="titleInput" placeholder="The Terminator" >
                               </div>
                               <div class="form-group">
                                   <label for="yearInput">Year</label>
                                   <input type="number" class="form-control" id="yearInput" placeholder="1984" min=1880>
                               </div>
                              
                               <div class="form-group">
                                   <label for="genreInput">Genre</label>
                                   <select class="form-control" id="genreInput">
                                    {{#each genre}}
                                	<option value="{{name}}">{{name}}</option>
                                    {{/each}}
                                   </select>
                               </div>
                                
                               <div class="form-group">
                                   <label for="descriptionInput">Description</label>
                                   <textarea class="form-control" id="descriptionInput" rows="3"></textarea>
                               </div>
                           </div>
                           <div class="modal-footer flex-wrap">
                               <button type="button" id="autocomplete" class="btn btn-info my-1">Auto-complete</button>
                               <button type="submit" id="add" class="btn btn-primary my-1">Add</button>
                               <button type="reset" id="remove" class="btn btn-primary my-1">Remove</button>
                               <button type="button" class="btn btn-secondary my-1" data-dismiss="modal">Close</button>
                           </div>
                        </form>
                       <div id="movie_danger" class="alert alert-danger alert-dismissible fade show" role="alert" style="display:none;">
                           Hello
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                             <span aria-hidden="true">&times;</span>
                           </button>
                        </div>
                        <div id="movie_success" class="alert alert-success alert-dismissible fade show" role="alert" style="display:none;">
                           Hello
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                             <span aria-hidden="true">&times;</span>
                           </button>
                       </div>
                       <div id="movie_info" class="alert alert-info alert-dismissible fade show" role="alert" style="display:none;">
                           Hello
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                             <span aria-hidden="true">&times;</span>
                           </button>
                       </div>
                       <div id="movie_warning" class="alert alert-warning alert-dismissible fade show" role="alert" style="display:none;">
                           Hello
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                             <span aria-hidden="true">&times;</span>
                           </button>
                       </div>
                   </div>
               </div>
          </div>
  <!-- info -->
  {{#if error_msg}}
  <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
    {{error_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {{/if}}
  {{#if success_msg}}
  <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
    {{success_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {{/if}}
  {{#if warning_msg}}
  <div class="alert alert-warning alert-dismissible fade show mt-5" role="alert">
    {{warning_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {{/if}}
</div>
<script type="text/javascript" src="javascripts/manageMovies.js"></script>
      