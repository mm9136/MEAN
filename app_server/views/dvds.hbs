<div class="container">
   <div class="main-login main-center">
     
         <div class="color-slova">
            <h2 class="card-title mt-2 text-center">{{title}}</h2>
         </div>
         <div class="title-info">
            <h5>{{h5}}</h5>
         </div>
         <div class="spacing-bottom accordion accordion-style " id="filmlist">
            {{#each dvds_data as |dvd|}}
          
            <div class="card">
               <div class="card-header" id="headingOne">
                   
                  <h2 class="mb-0">
                     <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse{{dvd._id}}" aria-expanded="true" aria-controls="collapse{{dvd._id}}">
                     {{dvd.name}}
                     </button>
                     <div class="price">
                        <!-- <button type="button" onClick ="addToCart('{{dvd._id}}')" class="btn-xs btn-success my-1">Add to cart</button> -->
                         <button  onClick ="addToCart('{{dvd._id}}')" class="btn-xs btn-primary my-1 no-borders " type="button">
                        	<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart" fill="black" xmlns="http://www.w3.org/2000/svg">
                        		<path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                          </svg>
                           <ion-icon name="addToCart" role="img" class="md hydrated" aria-label="addToCart"></ion-icon>
                        </button>
                        <p>price: {{valuta dvd.price}}   
                     </div>
                  </h2>
               </div>
               <div id="collapse{{dvd._id}}" class="collapse" aria-labelledby="headingOne" data-parent="#filmlist">
                  <div class="card-body card-body-style">
                     <ol>
                        {{#if dvd.movies}}
                        {{#each dvd.movies as |movie|}}
                              <li>
                                {{movie.title}}
                              </li>
                         {{/each}} 
                            {{else}}
                              <li>
                                {{dvd.name}}
                              </li>
                         {{/if}}
                     </ol>
                  </div>
               </div>
            </div>
            {{/each}}
         </div>
    
   </div>
</div>


<div class="toast" data-autohide="false">
  <div class="toast-header">
    <strong class="mr-auto text-primary">Success!</strong>
    <small class="text-muted">now</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
  </div>
  <div class="toast-body">
    DVD added to cart!
  </div>
</div>
<script type="text/javascript" src="javascripts/addToCart.js"></script>